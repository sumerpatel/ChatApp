<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel_layout_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/balloon_incoming_normal"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp">

        <!--     <TextView
                 android:id="@+id/user"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Person Name or Id"
                 android:visibility="gone" />-->

        <TextView
            android:id="@+id/textview_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="hellooooz,jhbzxhjbzxchgbzxckvbzx"
            android:textSize="@dimen/font_size_16sp"
            style="@style/chat_text_message_style" />

        <TextView
            android:id="@+id/textview_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textview_message"
            android:layout_toEndOf="@+id/textview_message"
            android:layout_alignParentBottom="true"
            android:text="04:50 Am"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/font_size_10sp"
            style="@style/chat_text_message_style"/>

        <ImageView
            android:id="@+id/uploadImage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/textview_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:layout_toLeftOf="@+id/textview_time"
            style="@style/chat_text_location_url_style" />

        <TextView
            android:id="@+id/textview_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:layout_toLeftOf="@+id/textview_time"
            style="@style/chat_text_location_url_style" />
    </RelativeLayout>

</RelativeLayout>

