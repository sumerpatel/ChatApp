<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel_layout_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/balloon_incoming_normal">

        <!--     <TextView
                 android:id="@+id/user"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Person Name or Id"
                 android:visibility="gone" />-->

        <TextView
            android:id="@+id/textview_message"
            style="@style/chat_text_message_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="helloooo"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textview_time"
            style="@style/chat_text_message_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/textview_message"
            android:layout_toRightOf="@+id/textview_message"
            android:text="04:50 Am"
            android:textColor="@android:color/darker_gray"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/uploadImage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/textview_location"
            style="@style/chat_text_location_url_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/textview_time"
            android:autoLink="web" />
    </RelativeLayout>

</RelativeLayout>

